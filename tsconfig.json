{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./*"],
      "@root/*": ["./*"],
      "@src/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@main/*": ["./src/main/*"],
      // submodule
      "@ace/*": ["./ace/*"],
      "@aceComp/*": ["./ace/component/*"],
      "@aceCon/*": ["./ace/container/*"],
      "@sub/*": ["./sub/*"],
      "@subComp/*": ["./sub/component/*"],
      "@subCon/*": ["./sub/container/*"],
    },
  },
  "include": ["src", "ace", "sub"],
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll",
  ],
}
